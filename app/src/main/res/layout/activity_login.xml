<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.RegActivity"
    android:background="@drawable/profile_blue">


    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:ems="10"
        android:layout_marginStart="8dp"
        android:layout_marginTop="220dp"
        android:layout_toEndOf="@id/imageView6"
        android:hint="Почта"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:ems="10"
        android:layout_toEndOf="@id/imageView8"
        android:hint="Пароль"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/login"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSign"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:onClick="onSignIn"
        android:layout_below="@id/passwd"
        android:layout_marginTop="90dp"
        android:layout_centerInParent="true"
        android:background="#64B5F6"
        android:textAllCaps="false"
        android:text="Войти" />

    <TextView
        android:id="@+id/action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textSize="16sp"
        android:onClick="clickLog"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnSign"
        android:layout_marginTop="40dp"
        android:gravity="center" />
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/ic_email_black_24dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_below="@id/imageView6"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/ic_https_black_24dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:srcCompat="@drawable/logotip" />
</RelativeLayout>