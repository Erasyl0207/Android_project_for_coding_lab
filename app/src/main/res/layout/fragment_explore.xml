<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ExploreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_country"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/world" />

            <ImageView
                android:id="@+id/image_city"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:src="@drawable/ic_location_city_black_24dp" />

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_country"
                android:gravity="center"
                android:text="Курсы вашей страны"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toEndOf="@id/just"
                android:layout_below="@id/tv_country"
                android:background="#7b7b7b"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toStartOf="@id/just"
                android:layout_below="@id/tv_country"
                android:background="#7b7b7b"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
            <TextView
                android:id="@+id/just"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_country"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:text="Ваши интересы"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_country"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="Курсы вашего города"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_stars_black_24dp"/>

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_stars_black_24dp" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_stars_black_24dp" />
        <LinearLayout
            android:layout_below="@id/img_1"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:id="@+id/inter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="textView"/>

            <TextView
                android:id="@+id/inter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="textView"/>

            <TextView
                android:id="@+id/inter3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="textView"/>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toEndOf="@id/just1"
                android:layout_below="@id/linearLayout"
                android:background="#7b7b7b"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toStartOf="@id/just1"
                android:layout_below="@id/linearLayout"
                android:background="#7b7b7b"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
            <TextView
                android:id="@+id/just1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text="Полный список интересов"
                android:textSize="18sp" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/english"/>
                <TextView
                    android:id="@+id/inter11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_11"
                    android:layout_marginStart="0dp"
                    android:gravity="center"
                    android:text="Английский язык"/>

                <ImageView
                    android:id="@+id/img_12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@id/img_11"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/business"/>
                <TextView
                    android:id="@+id/inter12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_12"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@id/img_11"
                    android:gravity="center"
                    android:text="Бизнес"/>

                <ImageView
                    android:id="@+id/img_13"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@id/img_12"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/videography"/>
                <TextView
                    android:id="@+id/inter13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_12"
                    android:layout_marginStart="19dp"
                    android:layout_toEndOf="@id/img_12"
                    android:gravity="center"
                    android:text="Видеосъемка"/>
                <ImageView
                    android:id="@+id/img_14"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@id/img_13"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/design"/>
                <TextView
                    android:id="@+id/inter14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_13"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@id/img_13"
                    android:gravity="center"
                    android:text="Дизайн"/>

                <ImageView
                    android:id="@+id/img_15"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@id/img_14"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/programming"/>
                <TextView
                    android:id="@+id/inter15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_14"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@id/img_14"
                    android:gravity="center"
                    android:text="Программирование"/>

                <ImageView
                    android:id="@+id/img_16"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="28dp"
                    android:layout_toEndOf="@id/img_15"
                    android:src="@drawable/psychology" />

                <TextView
                    android:id="@+id/inter16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_14"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/img_15"
                    android:gravity="center"
                    android:text="Психология"/>

                <ImageView
                    android:id="@+id/img_17"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="28dp"
                    android:layout_toEndOf="@id/img_16"
                    android:src="@drawable/self_development" />

                <TextView
                    android:id="@+id/inter17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_14"
                    android:layout_marginStart="29dp"
                    android:layout_toEndOf="@id/img_16"
                    android:gravity="center"
                    android:text="Саморазвитие" />
                <ImageView
                    android:id="@+id/img_18"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="28dp"
                    android:layout_toEndOf="@id/img_17"
                    android:src="@drawable/finance" />

                <TextView
                    android:id="@+id/inter18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_14"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/img_17"
                    android:gravity="center"
                    android:text="Финансы" />
                <ImageView
                    android:id="@+id/img_19"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="28dp"
                    android:layout_toEndOf="@id/img_18"
                    android:src="@drawable/photography" />

                <TextView
                    android:id="@+id/inter19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_14"
                    android:layout_marginStart="39dp"
                    android:layout_toEndOf="@id/img_18"
                    android:gravity="center"
                    android:text="Фотография" />
            </RelativeLayout>

        </HorizontalScrollView>
    </LinearLayout>

</FrameLayout>