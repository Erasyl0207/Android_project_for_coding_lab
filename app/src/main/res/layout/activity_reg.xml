<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_blue"
    tools:context=".Login.RegActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/img_b"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@id/textView5"
        android:background="#7b7b7b" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/img_b"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_toStartOf="@id/textView5"
        android:background="#7b7b7b" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_b"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Ваши интересы" />

    <Button
        android:id="@+id/img_b2"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/passwd"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/imageView10"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/next"
        android:text="   Страна"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_below="@id/imageView6"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_https_black_24dp" />

    <EditText
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/login"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/imageView9"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSign"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnInterest2"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:onClick="onSignUp"
        android:text="Регистрация" />

    <TextView
        android:id="@+id/action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSign"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:onClick="clickReg"
        android:text="У вас уже есть аккаунт ? Войдите здесь"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/namereg"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/imageView6"
        android:ems="10"
        android:hint="Почта"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/namereg"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/lastnamereg"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/imageView4"
        android:ems="10"
        android:hint="Имя"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lastnamereg"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/imageView3"
        android:ems="10"
        android:hint="Фамилия"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_person_outline_black_24dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_below="@id/imageView3"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_person_outline_black_24dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_below="@id/imageView4"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_email_black_24dp" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_below="@id/imageView11"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_location_city_black_24dp" />

    <Button
        android:id="@+id/img_b"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/img_b2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/imageView11"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/next"
        android:text="   Город"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_below="@id/imageView9"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/world" />

    <Button
        android:id="@+id/btnInterest1"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#80DEEA"
        android:gravity="center"
        android:text="1"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnInterest2"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#80DEEA"
        android:gravity="center"
        android:text="2"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnInterest3"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="#80DEEA"
        android:gravity="center"
        android:text="3"
        android:textAllCaps="false" />


</RelativeLayout>

